/**
 * 通用表单按钮
 */
.action-container {
    .display-box;
    width: 100%;
    &.bottom-fixed {
        background-color: #f8f8f8;
        z-index: 100;
        position: fixed;
        bottom: 0;
        &:after {
            box-shadow: 10px 0px 15px 1px #dcdedf;
        }
    }
    .action-btn {
        width: 0;
        display: block;
        box-flex: 1;
        -webkit-box-flex: 1;
        background-color: @primaryColorRed;
        height: 50px;
        line-height: 50px;
        font-size: 16px;
        text-align: center;
        color: #FFF;
        margin: 0 15px;
        border-radius: 5px;
        &:nth-child(n+2) {
            margin-left: 0px;
        }
        &.cancel {
            color: #333;
            background-color: #FFF;
            background: -webkit-gradient(linear, 50% 100%, 50% 0, from(#f5f5f5), to(#FFF));
            &:after {
                border-radius: 10px;
                border-color: #c7c7c7;
            }
        }
        &:active{
            background-color: #e83c36 !important;
        }
        &.forbid{
            background-color: #c1c1c1;
            &:active{
                background-color: #c1c1c1 !important;
            }
        }
    }
}
