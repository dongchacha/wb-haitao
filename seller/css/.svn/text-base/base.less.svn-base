/**
 * 页面进入进出动画
 */
@animateTime: .3s;
@animateTime2: .4s;
.an-deley(@time:.1s){
    -webkit-animation-delay:@time;
        animation-delay:@time;  
}
.an-delay.ng-enter{//对于进入进出的动画延迟
    -webkit-animation-delay:.4s !important;
        animation-delay:.4s !important;
}
//左边进入
.an-slideLeft{
    &.ng-enter {
        z-index: 100;
        -webkit-animation: kf-enter @animateTime2 both ease;
        .an-deley(0.1s);
    }
    &.ng-leave {
        z-index: 100;
        -webkit-animation: kf-leave @animateTime2 both ease;
    }
    /* 从左侧移入 */
    @-webkit-keyframes kf-enter {
        0% {
            -webkit-transform: translate3D(-100%, 0, 0);
            transform: translate3D(-100%, 0, 0);
        }
        5%{
            -webkit-transform: translate3D(-100%, 0, 0);
            transform: translate3D(-100%, 0, 0);
        }
        100% {
            -webkit-transform: translate3D(0, 0, 0);
            transform: translate3D(0, 0, 0);
        }
    }
    /* 向左侧移出 */
    @-webkit-keyframes kf-leave {
        0% {
            -webkit-transform: translate3D(0, 0, 0);
            transform: translate3D(0, 0, 0);
        }
        100% {
            -webkit-transform: translate3D(-100%, 0, 0);
            transform: translate3D(-100%, 0, 0);
        }
    }
}

//右边进入
.an-slideRight{
    &.ng-enter {
        z-index: 200;
        -webkit-animation: slideRight-enter @animateTime2 both ease;
    }
    &.ng-leave {
        z-index: 200;
        -webkit-animation: slideRight-leave @animateTime2 both ease;
    }
    /* 从右侧进入 */
    @-webkit-keyframes slideRight-enter {
        0% {
            -webkit-transform: translate3D(100%, 0, 0);
            transform: translate3D(100%, 0, 0);
        }
        5%{
            -webkit-transform: translate3D(100%, 0, 0);
            transform: translate3D(100%, 0, 0);
        }
        100% {
            -webkit-transform: translate3D(0, 0, 0);
            transform: translate3D(0, 0, 0);
        }
    }
    /* 从右侧移出 */
    @-webkit-keyframes slideRight-leave {
        from {
            -webkit-transform: translate3D(0, 0, 0);
            transform: translate3D(0, 0, 0);
        }
        to {
            -webkit-transform: translate3D(100%, 0, 0);
            transform: translate3D(100%, 0, 0);
        }
    }
}

//顶上出来
.an-slideUp{
    &.ng-enter {
        z-index: 200;
        -webkit-animation: slideUp-enter @animateTime both ease;
        .an-deley(0.1s);
    }
    &.ng-leave {
        z-index: 200;
        -webkit-animation: slideUp-leave @animateTime both ease;
    }
    /* 从上面下来 */
    @-webkit-keyframes slideUp-enter {
        0% {
            -webkit-transform: translateY(-100%);
            transform: translateY(-100%);
        }
        5%{
            -webkit-transform: translateY(-100%);
            transform: translateY(-100%);
        }
        100% {
            -webkit-transform: translateY(0);
            transform: translateY(0);
        }
    }
    /* 从上面移出 */
    @-webkit-keyframes slideUp-leave {
        from {
            -webkit-transform: translateY(0);
            transform: translateY(0);
        }
        to {
            -webkit-transform: translateY(-100%);
            transform: translateY(-100%);
        }
    }
}

//底下出来
.an-slideDown{
    &.ng-enter {
        z-index: 200;
        -webkit-animation: slideDown-enter @animateTime both ease;
        // .an-deley(0.1s);
    }
    &.ng-leave {
        z-index: 200;
        -webkit-animation: slideDown-leave @animateTime both ease;
    }
    /* 从底下上来 */
    @-webkit-keyframes slideDown-enter {
        0% {
            -webkit-transform: translateY(100%);
            transform: translateY(100%);
        }
        5%{
            -webkit-transform: translateY(100%);
            transform: translateY(100%);
        }
        100% {
            -webkit-transform: translateY(0);
            transform: translateY(0);
        }
    }
    /* 从底下移出 */
    @-webkit-keyframes slideDown-leave {
        from {
            -webkit-transform: translateY(0);
            transform: translateY(0);
        }
        to {
            -webkit-transform: translateY(100%);
            transform: translateY(100%);
        }
    }
}

//淡入淡出
.an-fadeInOut{
    &.ng-enter {
        z-index: 200;
        -webkit-animation: fadeInOut-enter @animateTime both ease;
        // .an-deley(0.1s);
    }
    &.ng-leave {
        z-index: 200;
        -webkit-animation: fadeInOut-leave @animateTime both ease;
    }
    /* 从底下上来 */
    @-webkit-keyframes fadeInOut-enter {
        0% {
            opacity: 0;
            filter:alpha(opacity=0);
        }
        5%{
            opacity: 0;
            filter:alpha(opacity=0);
        }
        100% {
            opacity: 1;
            filter:alpha(opacity=100);
        }
    }
    /* 从底下移出 */
    @-webkit-keyframes fadeInOut-leave {
        from {
            opacity: 1;
            filter:alpha(opacity=100);
        }
        to {
            opacity: 0;
            filter:alpha(opacity=0);
        }
    }
}

//箭头旋转180
:hover .arrow-rotate,
:hover .arrow-rotate-back{
    will-change: transform;
}
.arrow-rotate{
    transform-origin: 50% 50%;
    animation: kf-arrow-asc 0.2s linear forwards;
    @-webkit-keyframes kf-arrow-asc {
        from {
            -webkit-transform: rotate(0);
            transform: rotate(0);
        }
        to {
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }
    }
}

//箭头旋转复原
.arrow-rotate-back{
    transform-origin: 50% 50%;
    animation: kf-arrow-desc 0.2s linear forwards !important;
    @-webkit-keyframes kf-arrow-desc {
        from {
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }
        to {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    }
}

